div.container.gutter
  header
    h1 Welcoming The Furious

  div.row
    div.col-xs-12.col-md-8.col-md-offset-2
      form(name="form")
        div.form-group
          label(for="email") Email
          input.form-control(type="email" placeholder="Email" ng-model="account.email" required)

          label(for="password") Password
          input.form-control(name="password" type="password" placeholder="Password" ng-model="account.password" required)

        div.row
          a.btn.btn-primary.btn.btn-primary.col-xs-12.col-md-6.col-md-offset-3(ng-disabled="form.$invalid" ng-click="login()")  Login
